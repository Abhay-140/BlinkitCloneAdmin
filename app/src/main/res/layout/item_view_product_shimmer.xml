<?xml version="1.0" encoding="utf-8"?>
<GridLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="20dp"
    android:columnCount="2"
    android:orientation="horizontal"
    app:layout_constraintEnd_toEndOf="parent"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintTop_toTopOf="parent">

    <androidx.cardview.widget.CardView
        android:id="@+id/cvProduct1"
        android:layout_width="0dp"
        android:layout_height="286dp"
        android:layout_columnWeight="1"
        android:layout_margin="8dp"
        android:background="@drawable/bg_stroke"
        android:backgroundTint="@color/white"
        android:elevation="0dp"
        app:cardCornerRadius="13dp"
        app:cardPreventCornerOverlap="false"
        app:cardUseCompatPadding="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="13dp"
            android:orientation="vertical">

            <com.denzcoskun.imageslider.ImageSlider
                android:id="@+id/ivImageSlider1"
                android:layout_width="wrap_content"
                android:layout_height="156dp"
                android:background="#DDDDDD"
                app:iss_auto_cycle="false"
                app:iss_text_align="CENTER" />

            <TextView
                android:id="@+id/tvProductTitle1"
                android:layout_width="70dp"
                android:layout_height="wrap_content"
                android:background="#DDDDDD"
                android:ellipsize="end"
                android:maxLines="1"
                android:textColor="@color/black"
                android:textSize="19.50sp" />

            <TextView
                android:id="@+id/tvProductQuality1"
                android:layout_width="40dp"
                android:layout_height="wrap_content"
                android:background="#DDDDDD"
                android:textColor="#6F6F6F"
                android:textSize="15.60sp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        android:id="@+id/tvProductPrice1"
                        android:layout_width="20dp"
                        android:layout_height="wrap_content"
                        android:background="#DDDDDD"
                        android:textColor="@color/black"
                        android:textSize="15.60sp"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent" />

                    <TextView
                        android:id="@+id/tvAdd1"
                        android:layout_width="78dp"
                        android:layout_height="wrap_content"
                        android:background="#DDDDDD"
                        android:gravity="center"
                        android:padding="5.20dp"
                        android:textColor="@color/green"
                        android:textSize="14.30sp"
                        android:textStyle="bold"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintTop_toTopOf="parent" />

                </androidx.constraintlayout.widget.ConstraintLayout>

            </LinearLayout>

        </LinearLayout>
    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:id="@+id/cvProduct2"
        android:layout_width="0dp"
        android:layout_height="286dp"
        android:layout_columnWeight="1"
        android:layout_margin="8dp"
        android:background="@drawable/bg_stroke"
        android:backgroundTint="@color/white"
        android:elevation="0dp"
        app:cardCornerRadius="13dp"
        app:cardPreventCornerOverlap="false"
        app:cardUseCompatPadding="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="13dp"
            android:orientation="vertical">

            <com.denzcoskun.imageslider.ImageSlider
                android:id="@+id/ivImageSlider2"
                android:layout_width="wrap_content"
                android:layout_height="156dp"
                android:background="#DDDDDD"
                app:iss_auto_cycle="false"
                app:iss_text_align="CENTER" />

            <TextView
                android:id="@+id/tvProductTitle2"
                android:layout_width="70dp"
                android:layout_height="wrap_content"
                android:background="#DDDDDD"
                android:ellipsize="end"
                android:maxLines="1"
                android:textColor="@color/black"
                android:textSize="19.50sp" />

            <TextView
                android:id="@+id/tvProductQuality2"
                android:layout_width="40dp"
                android:layout_height="wrap_content"
                android:background="#DDDDDD"
                android:textColor="#6F6F6F"
                android:textSize="15.60sp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        android:id="@+id/tvProductPrice2"
                        android:layout_width="20dp"
                        android:layout_height="wrap_content"
                        android:background="#DDDDDD"
                        android:textColor="@color/black"
                        android:textSize="15.60sp"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent" />

                    <TextView
                        android:id="@+id/tvAdd2"
                        android:layout_width="78dp"
                        android:layout_height="wrap_content"
                        android:background="#DDDDDD"
                        android:gravity="center"
                        android:padding="5.20dp"
                        android:textColor="@color/green"
                        android:textSize="14.30sp"
                        android:textStyle="bold"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintTop_toTopOf="parent" />

                </androidx.constraintlayout.widget.ConstraintLayout>

            </LinearLayout>

        </LinearLayout>
    </androidx.cardview.widget.CardView>

</GridLayout>